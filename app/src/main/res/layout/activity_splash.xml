<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landing_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faded_black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Splash">

    <TextView
        android:id="@+id/landing_txv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/coquette_bold"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/landing_tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/landing_txv_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/helvetica_neue_medium"
        android:text="Enjoy the base"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/landing_btn_sign_up"
        android:layout_width="wrap_content"
        android:layout_below="@id/landing_tv_slogan"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:width="300dp"
        android:background="@color/back"
        android:text="sign_up"
        android:theme="@style/white_button_text" />

    <TextView
        android:id="@+id/landing_txv_login_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/landing_btn_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/helvetica_neue_medium"
        android:text="OR"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <Button
        android:id="@+id/landing_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/landing_txv_login_request"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp"
        android:background="@color/back"
        android:fontFamily="@font/helvetica_neue_medium"
        android:text="log_in"
        android:theme="@style/red_button_text" />

    <TextView
        android:id="@+id/landing_txv_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/helvetica_neue_medium"
        android:text="terms_and_privacy_policy"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>